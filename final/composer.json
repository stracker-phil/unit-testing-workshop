{
  "name": "stracker-phil/unit-testing-workshop",
  "description": "Mini project to showcase unit testing",
  "type": "wordpress-plugin",
  "license": "MIT",
  "require": {
    "php": ">=7.4"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text"
